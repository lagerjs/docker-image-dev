#!/bin/sh

# Change the "lager" user UID and GID

# Retrieve NEW_ ids to apply
USER="lager"
NEW_UID=$1
NEW_GID=$1
if [ $# -eq 2 ]
then
    NEW_GID=$2
elif [ $# -ne 1 ]
then
    echo "Usage: change-uid NEW_UID [NEW_GID]"
    echo "If NEW_GID is not provided, its value will be the same as NEW_UID"
    exit 1
fi

# Retrieve OLD_ ids
OLD_UID=`id -u ${USER}`
OLD_GID=`id -g ${USER}`

# Change the user ids
usermod -u ${NEW_UID} ${USER}
groupmod -g ${NEW_GID} ${USER}

# Change the files ownership
/bin/chown --changes --silent --no-dereference --recursive --from=${OLD_UID} ${NEW_UID} /
/bin/chown --changes --silent --no-dereference --recursive --from=:${OLD_GID} :${NEW_GID} /

echo "UID and GID changed from ${OLD_UID}:${OLD_GID} to ${NEW_UID}:${NEW_GID} for \"${USER}\""
exit 0
